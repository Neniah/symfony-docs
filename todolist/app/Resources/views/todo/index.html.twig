{% extends 'base.html.twig' %}

{% block body %}
  <table class="table table-striped">
    <h2 class="page-header">Lastest Todos</h2>
    <thead>
      <tr>
        <th>#</th>
        <th>Todo</th>
        <th>Due Date</th>
      </tr>
      </thead>
      <tbody>
        {% for todo in todos %}
        <tr> <th scope="row">{{todo.id}}</th>
          <td>{{todo.name}}</td>
          <td>{{todo.dueDate|date("g:ia - M d Y")}}</td>
          <td><a href="{{path('todo_details', {id: todo.id})}}" class="btn btn-info">View</a>
              <a href="{{path('todo_edit', {id: todo.id})}}" class="btn btn-success">Edit</a>
              <a href="{{path('todo_delete', {id: todo.id})}}" class="btn btn-warning">Delete</a>
          </td>
        </tr>
        {% endfor %}
        </tbody>
      </table>
{% endblock %}
